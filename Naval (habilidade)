#include <stdio.h>

int main() {

    // TABULEIRO PRINCIPAL 10x10
    int tabuleiro[10][10];
    int linha, coluna;

    // Inicializa o tabuleiro com água (0)
    for (linha = 0; linha < 10; linha++) {
        for (coluna = 0; coluna < 10; coluna++) {
            tabuleiro[linha][coluna] = 0;
        }
    }

    // COLOCANDO UM NAVIO (exemplo)
    for (int i = 0; i < 3; i++) {
        tabuleiro[4][i + 3] = 3; // navio horizontal
    }

    // MATRIZ DA HABILIDADE CONE (5x5)
    int cone[5][5];

    for (linha = 0; linha < 5; linha++) {
        for (coluna = 0; coluna < 5; coluna++) {

            if (linha == 0 && coluna == 2)
                cone[linha][coluna] = 1;
            else if (linha == 1 && coluna >= 1 && coluna <= 3)
                cone[linha][coluna] = 1;
            else if (linha == 2)
                cone[linha][coluna] = 1;
            else
                cone[linha][coluna] = 0;
        }
    }

    // MATRIZ DA HABILIDADE CRUZ (5x5)
    int cruz[5][5];

    for (linha = 0; linha < 5; linha++) {
        for (coluna = 0; coluna < 5; coluna++) {

            if (linha == 2 || coluna == 2)
                cruz[linha][coluna] = 1;
            else
                cruz[linha][coluna] = 0;
        }
    }

    // MATRIZ DA HABILIDADE OCTAEDRO (5x5)
    int octaedro[5][5];

    for (linha = 0; linha < 5; linha++) {
        for (coluna = 0; coluna < 5; coluna++) {

            if ((linha == 2 && coluna == 2) ||
                (linha == 1 && coluna >= 1 && coluna <= 3) ||
                (linha == 3 && coluna >= 1 && coluna <= 3))
                octaedro[linha][coluna] = 1;
            else
                octaedro[linha][coluna] = 0;
        }
    }

    // APLICANDO A HABILIDADE CONE NO TABULEIRO
    int origemLinha = 2;
    int origemColuna = 5;

    for (linha = 0; linha < 5; linha++) {
        for (coluna = 0; coluna < 5; coluna++) {

            if (cone[linha][coluna] == 1) {
                int posLinha = origemLinha + linha;
                int posColuna = origemColuna + coluna - 2;

                if (posLinha >= 0 && posLinha < 10 &&
                    posColuna >= 0 && posColuna < 10) {

                    if (tabuleiro[posLinha][posColuna] == 0)
                        tabuleiro[posLinha][posColuna] = 5;
                }
            }
        }
    }

    // EXIBIÇÃO DO TABULEIRO
    printf("Tabuleiro com Habilidade:\n\n");

    for (linha = 0; linha < 10; linha++) {
        for (coluna = 0; coluna < 10; coluna++) {
            printf("%d ", tabuleiro[linha][coluna]);
        }
        printf("\n");
    }

    return 0;
}
